extends ../../demo-layout.pug

block head
  title CCS .menu-drawer
  link(rel='stylesheet' href=references.menuDrawer)
  style.
    body {
      display: flex;
      margin: 0;
      padding: 0;
      height: 100vh;
    }
    .menu-drawer, .menu-view, .menu-icon {
      --ani-duration: 3s;
    }
    .menu-icon {
      --font-size: 32px;
    }
    .menu-view {
      background: #f6f6f6;
    }
    main {
      padding: 2em 3em;
    }

block body
  .ppz-ccs.menu-drawer
    label.ppz-ccs.menu-icon
      input(type='checkbox')
    .ppz-ccs.menu-view 菜单内容区
  main 正文内容区
